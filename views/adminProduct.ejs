    <form action="/unlisted-product" >
      <button class="btn mb-3" type="submit " style="background-color: rgb(221, 170, 4); color: white;">Unlisted Products</button>
    </form>
    <table class="table align-middle mb-0 bg-white" >
      <thead class="bg-light">
          <tr>
              <th style="padding-left: 4%">Name</th>
              <th >Category</th>
              <th style="padding-left: 3%;">Price</th>
              <th style="padding-left: 4%;">Stock</th>
              <th style="padding-left: 5%;">Actions</th>
          </tr>
      </thead>
      
      <tbody>
        <% for(let i=0;i< products.length;i++){%>
        <tr>
          <td>
            <div class="d-flex align-items-center" >
              <img
                  src="images/<%=products[i].prd_image[0]%>"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1"><%=products[i].pname%></p>
                <!-- <p class="text-muted mb-0">john.doe@gmail.com</p> -->
              </div>
            </div>
          </td>
          <td>
            <p class=" mb-1" style=" color: black; font-weight: 600"><%=products[i].category%></p>
            <!-- <p class="text-muted mb-0">IT department</p> -->
          </td>
          <!-- <td>
            <p class="fw-normal mb-1"><%=products[i].description%></p>
          </td> -->
          <td style="color: rgb(224, 10, 10); font-weight: 600;">â‚¹<%= (products[i].price-(products[i].price * (products[i].discount / 100))).toLocaleString('en-IN') %></td>

          <td><span style="color: green; font-weight: 600"><%=products[i].stock%></span> stocks left</td>
          <td>
            <a  style="margin-right: 3%;" href="/update-product?id=<%=products[i]._id%>" class="btn  px-1 pt-2 icon-hover"><i class="fas fa-pencil fa-lg text-secondary px-1" ></i></a>
            <a  style="margin-right: 3%;" href="/update-image?id=<%=products[i]._id%>" class="btn  px-1 pt-2 icon-hover"><i class="fas fa-image fa-lg text-secondary px-1" ></i></a>
            <a href="javascript:void(0);" class="btn  px-1 pt-2 icon-hover" onclick="confirmDelete('<%= products[i]._id %>')">
              <i class="fas fa-trash fa-lg text-secondary px-1"></i>
            </a>
