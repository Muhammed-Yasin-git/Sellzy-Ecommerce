    <section id="content">
        <main>

            <a href="/add-category"><button class="btn btn-success">Add Categories</button></a>
            <a href="/unlisted-category"><button class="btn btn-warning">Unlisted Categories</button></a>

            <div class="table-data">
                <div class="order">
                    <div class="head">
                        <h3>Categories</h3>
                        <i class='bx bx-search'></i>
                        <i class='bx bx-filter'></i>
                    </div>
                    <table>

                        <thead>
                            <tr>
                                <th>si. No</th>
                                <th>category</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <% for(let i=0;i<category.length;i++){ %>
                            <tbody>
                                <tr onclick="category('<%=category[i].name%>')" >
                                    <td >
                                        <p>
                                            <%=i+1 %>
                                        </p>
                                        
                                    </td>
                                    
                                    <td>

                                        <p>
                                            <%= category[i].name %>
                                            
                                        </p>
                                        
                                    </td>
                                    
                                    

                                    <td><a href="/unlist-category?category=<%=category[i].name%>">
                                      <button class="btn btn-warning">Unlist </button></a>
                                    </td>


                                </tr>
                                
                                <% } %>
                                
                            </tbody>
                            
                    </table>
                    
                </div>
        </main>
        <style>
          /* Add a border-bottom to every table row */
          table tbody tr {
            border-bottom: 1px solid #ddd; /* Adjust the color as needed */
          }
        
          /* Optional: Add hover effect to the rows */
          table tbody tr:hover {
            background-color: #f5f5f5; /* Adjust the background color as needed */
          }
        </style>
        
        <script>
            function category(cat) {
                const singlecat = `/single-catogary?category=${cat}`
                window.location.href = singlecat;
            }
        </script>
    </section>

