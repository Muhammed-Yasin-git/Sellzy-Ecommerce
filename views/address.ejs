                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-8 col-xl-10">
                        <div class="mt-5 mb-5" style="width: 100%; border-radius: 15px; background-color:white">
                            <div class="card-body p-5" style="box-shadow: rgba(239, 239, 239, 0.2) 0px 8px 24px;">
                                <h2 class="text-uppercase text-center mb-1 h"
                                    style="color: #777777; font-weight: bold; font-size: 20px;">Addresses</h2>

                                    <p class="text-dark text-center mb-5 h">
                                        <a href="javascript:history.back();" style="color: #232F3E; text-decoration: underline;">Return to account Details</a>
                                    </p>
                                    <% if(users && users.length > 0 && users[0].address && users[0].address.length == 4) {%>
                                        <div class="d-flex justify-content-center mb-5">
                                            <a href="#"><button type="submit"  class="btn  btn-success "
                                                    style="display: none;">Add
                                                    New Address</button> </a>
                                        </div>
                                        <% }else { %>
                                    <div class="d-flex justify-content-center mb-5" >
                                    <a href="/Add-address"><button type="submit"  class="btn  btn-success "
                                            style=" color: rgb(255, 255, 255); box-shadow: none; width: 100%; border-radius: 30px; height: 40Px; ">Add
                                            New Address</button> </a>
                                </div>
                                <% } %>

                                <!-- <p class="text-dark text-center mb-5 h">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#changeAddressModal"
                                        style="color: #232F3E;text-decoration: underline;">Change Address</a>
                                </p> -->





                               


                                <div class="row vh-100" >
                                    <% if (users && users.length > 0 && users[0].address && users[0].address.length > 0) { %>
                                        <% for (let a = 0; a < users[0].address.length; a++) { %>
                                            <div class="col-md-6 mb-4">
                                               <div class="card " style="border-radius: 15px; box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.1); background-color: #f7f7f7;">
                                                    <!-- Other card content here -->
                                                    <div class="d-flex justify-content-center align-items-center gap-5">
                                                        <p style="font-size: larger; font-weight: 500; color: black; text-decoration: underline; text-align: center; margin-top: 2%;">Address <%=a+1%></p>
                                                        <% if(users[0].address[a].default) { %>
                                                            <span class="status" style="text-align: center; width: 80px; height: 20px; background-color: green; border-radius: 10% ; color: #f7f7f7; font-size: smaller; margin-left: 35%; ">Default</span>
                                                        <% } else { %>
                                                            <form action="/make-default/?id=<%=users[0].address[a]._id %>" method="post" >
                                                                <button class="btn btn-outline-primary" style="margin-left: 75px;" >Make Default</button>
                                                            </form>
                                                        <% } %>
                                                    </div>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">Address:</span> <%=users[0].address[a].Address%></p>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">City:</span><%=users[0].address[a].City%></p>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">House_No:</span> <%=users[0].address[a].House_No%></p>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">State:</span> <%=users[0].address[a].State%></p>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">Alternate no:</span> <%=users[0].address[a].altr_number%></p>
                                                    <p style="text-align: center;"><a style="color: #232F3E;"></a><span style="color: black; font-weight: 500;">Post Code:</span> <%=users[0].address[a].postcode%></p>
                                                    <!-- Other card content here -->
                                                    <div class="d-flex justify-content-lg-end mb-1" >
                                                        <!-- Modify the delete button -->

                                                        
                                                        <a href="#" 
                                                            class="btn btn-light border px-2 pt-2 icon-hover delete-button" 
                                                            style="margin-right: 3%;" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#deleteConfirmationModal"
                                                            data-address-index="<%= a %>"
                                                            data-address-id="<%= users[0].address[a]._id %>">
                                                            <i class="fas fa-trash fa-lg text-secondary px-1"></i>
                                                        </a>

                                                         
                                                     

                                                          
                                                          <a href="/update-address/?id=<%= users[0].address[a]._id %>&addressIndex=<%= a %>" class="btn btn-light border px-2 pt-2 icon-hover" style="margin-right: 3%;">
                                                            <i class="fas fa-edit fa-lg text-secondary px-1"></i>
                                                         </a>
                                                         
                                                         
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        <% } %>
                                    <% } else { %>
                                        <div class="col-12">
                                            <p>No addresses found. <a href="/Add-address"><i class="fa fa-plus mt-mb-3 me-md-2" ></i></a></p>
                                        </div>
                                    <% } %>
                                </div>
                                
                                

                                <!-- Modal for Delete Confirmation -->
                                        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
