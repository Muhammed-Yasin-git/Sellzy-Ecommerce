            document.getElementById('defaultAddress').innerHTML = `
        locality: ${users[0].address[index].locality}<br>
        district: ${users[0].address[index].district}<br>
        country: ${users[0].address[index].country}<br>
        postcode: ${users[0].address[index].postcode}
      `;

            // Close the modal
            $('#changeAddressModal').modal('hide');
        }
    </script>

<!-- Add this script at the end of your HTML, after including jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    // Function to set modal data
    function setModalData(addressIndex, addressId) {
        $('#deleteConfirmationModal .modal-body').text('Are you sure you want to delete this address?');
        $('#deleteConfirmationModal .btn-danger').attr('href', `/delete-address?id=${addressId}&addressIndex=${addressIndex}`);
    }

    // Modal for Delete Confirmation
    $('#deleteConfirmationModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var addressIndex = button.data('address-index');
        var addressId = button.data('address-id');

        // Call the function to set modal data
        setModalData(addressIndex, addressId);
    });
 
    // Add a click event listener for the delete button
    $('.delete-button').on('click', function (event) {
        event.preventDefault(); // Prevent the default behavior of the anchor tag
    });
</script>




  

 